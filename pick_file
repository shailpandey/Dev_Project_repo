 node{    
     stage('Organise Files'){                         
         steps{  
                script{                        
                    File sourceFolder = new File("https://github.com/shailpandey/Dev_Project_repo/*");
                    File  destinationFolder = new File("https://github.com/shailpandey/1");                                                   
                    File[] listOfFiles = sourceFolder.listFiles();
                    echo "Files Total: " + listOfFiles.length;  

                    for (File file : listOfFiles) {
                        if (file.isFile()) {
                            echo file.getName()                                                                
                            Files.copy(Paths.get(file.path), Paths.get("https://github.com/shailpandey/1"));                                   
                        }
                    }                  
                }                                
            }                           
        } 
    }
